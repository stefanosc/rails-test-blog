<h1>Listing posts</h1>

<%= link_to 'New post', new_post_path %>

<table>
  <tr>
    <th>Post Title</th>
    <th>Post Text</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post  %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post), data: { confirm: 'Are you sure?' }, :method => :delete  %> </td>
    </tr>
  <% end %>  

</table>
